<div class="row">
    <div class="col-md-4">
        <form action="/send-sms" method="POST" class="card card-body">
            <div class="form-group">
                <input type="text" name="message" class="form-control" placeholder="Escribe tu mensaje" autofocus>
            </div>

            <div class="form-group">
                <input type="tel" name="phone" class="form-control" placeholder="+543884445522" autocomplete="off">
            </div>
            <button class="btn btn-primary btn-block">Enviar</button>
        </form>
    </div>
    <div class="col-md-8">

        {{#if messages}}
        {{#each messages}}
        <div class="card card-body">
            <p>{{Body}}</p>
            <span>{{To}}</span>
        </div>
        {{/each}}


        {{else}}
        <p>No hay mensajes</p>

        {{/if}}

    </div>
</div>